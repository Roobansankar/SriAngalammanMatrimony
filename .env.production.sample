# =============================================================================
# PRODUCTION ENVIRONMENT - VPS
# =============================================================================
# Copy this to .env on your production VPS
# =============================================================================

NODE_ENV=production
PORT=5000

# Database
DB_HOST=db
DB_USER=matrimony
DB_PASS=YOUR_SECURE_DB_PASSWORD
DB_NAME=sriang

# Public URLs (replace with your domain or VPS IP)
API_BASE_URL=http://80.65.208.64:5000
BASE_URL=http://80.65.208.64:5000

# Security
JWT_SECRET=YOUR_SECURE_JWT_SECRET_CHANGE_THIS

# SMTP
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-smtp-password
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465

# Razorpay
RAZORPAY_KEY_ID=your-live-razorpay-key
RAZORPAY_KEY_SECRET=your-live-razorpay-secret

# Frontend (nginx proxies /api to backend)
REACT_APP_API_BASE=/api
REACT_APP_SOCKET_URL=

# MySQL Container
MYSQL_ROOT_PASSWORD=YOUR_SECURE_ROOT_PASSWORD
MYSQL_DATABASE=sriang
MYSQL_USER=matrimony
MYSQL_PASSWORD=YOUR_SECURE_DB_PASSWORD

# Persistent data on VPS
MYSQL_DATA_DIR=/var/lib/matrimony/mysql
